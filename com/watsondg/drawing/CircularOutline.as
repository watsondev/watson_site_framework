package com.watsondg.drawing{	import flash.display.Sprite;	import com.watsondg.drawing.CircularArea;		public class CircularOutline extends Sprite	{		private var _outer	:CircularArea;		private var _inner	:CircularArea;				public function CircularOutline(outerRadius:Number, innerRadius:Number, alignCenter:Boolean = true, outerColor:Number = 0x000000, innerColor:Number = 0x000000):void		{			var _center = new SquareArea(10, 10, true, 0x000000)			var outerPosx:Number = outerRadius;			var outerPosy:Number = outerRadius;						var innerPosx:Number = outerRadius;			var innerPosy:Number = outerRadius;						if(!alignCenter){				innerPosx = (outerRadius + (outerRadius - innerRadius))				innerPosy = (outerRadius + (outerRadius - innerRadius))			}									_outer = new CircularArea(outerRadius, alignCenter, outerColor);			_outer.x = outerPosx			_outer.y = outerPosy						_inner = new CircularArea(innerRadius, alignCenter, innerColor);			_inner.x = innerPosx			_inner.y = innerPosy			addChild(_outer);			addChild(_inner);		}		//getters and setters		public function get inner():CircularArea		{			return _inner;		}		public function get outer():CircularArea		{			return _outer;		}	}}