package com.watsondg.drawing{	import flash.display.Shape;	import flash.display.Sprite;	public class SquareArea extends Sprite	{		private var _area:Sprite;				public function SquareArea(w:Number = 100, h:Number = 100, alignCenter:Boolean = false, color:Number = 0x000000):void		{			var posx:Number = 0;			var posy:Number = 0;						if (alignCenter)			{				posx =  -  w * .5;				posy =  -  h * .5;			}			_area = new Sprite();			_area.graphics.beginFill(color,1);			_area.graphics.drawRect(posx,posy,w,h);			_area.graphics.endFill();			addChild(_area);		}		public function get area():Sprite		{			return _area;		}	}}