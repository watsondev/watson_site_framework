package com.watsondg.drawing{	import flash.display.Sprite;	import com.watsondg.drawing.SquareArea;					public class SquareOutline extends Sprite	{		//	properties		private 	var _outer	:Sprite;		private 	var _inner	:SquareArea;		protected 	var _top	:SquareArea;		protected	var _right	:SquareArea;		protected	var _bottom	:SquareArea;		protected	var _left	:SquareArea;												//	constructor		public function SquareOutline(w:Number, h:Number, thicknessWidth:Number, thicknessHeight:Number, color:Number = 0x000000, withFill:Boolean = false, fullFill:Boolean = false, fillColor:Number = 0x000000):void		{			var innerWidth:Number;			var innerHeight:Number;			var innerX:Number;			var innerY:Number;						if (withFill)			{				innerWidth = (w - (thicknessWidth * 2));				innerHeight = (h - (thicknessHeight * 2));				innerX = thicknessWidth;				innerY = thicknessHeight;								if (fullFill)				{					innerWidth = w;					innerHeight = h;					innerX = 0;					innerY = 0;				}				_inner = new SquareArea(innerWidth, innerHeight, false, fillColor);				_inner.x = innerX;				_inner.y = innerY;				addChild(_inner);			}			_top = new SquareArea(w, thicknessHeight, false, color);			_top.x = 0;			_top.y = 0;						_right = new SquareArea(thicknessWidth, h - thicknessHeight, false, color);			_right.x = w - thicknessWidth;			_right.y = thicknessHeight;						_bottom = new SquareArea(w, thicknessHeight, false, color);			_bottom.x = 0;			_bottom.y = h - thicknessHeight;						_left = new SquareArea(thicknessWidth, h - thicknessHeight, false, color);			_left.x = 0;			_left.y = thicknessHeight;						_outer = new Sprite();			_outer.addChild(_top);			_outer.addChild(_right);			_outer.addChild(_bottom);			_outer.addChild(_left);						addChild(_outer);		}		//getters and setters		public function get inner():SquareArea		{			return _inner;		}		public function get outer():Sprite		{			return _outer;		}	}}